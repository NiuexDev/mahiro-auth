{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "bun"],
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["../*"]
    }
  },
  "include": [
    "src/**/*",
    "../web/config.ts",
    "../util/**/*",
    "../type.d.ts"
  ]
}